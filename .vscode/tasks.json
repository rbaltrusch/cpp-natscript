{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe Aktive Datei kompilieren",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-g",
				"${file}",
				"${fileDirname}\\interpreter\\implementation\\*.cpp",
				"${fileDirname}\\tokens\\*.cpp",
				"${fileDirname}\\exceptions\\*.cpp",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}